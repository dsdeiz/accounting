{% extends 'base.html.twig' %}

{% set subheading   = "Account" %}
{% set breadcrumbs  = "List" %}

{% block body %}
  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Account name</th>
          <th>Bank</th>
          <th>Type</th>
          <th>Currency</th>
          <th>Weight</th>
          <th>Date Added</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for account in accounts %}
        <tr>
          <td>{{ account.name }}</td>
          <td>{{ account.bank }}</td>
          <td>{{ account.type }}</td>
          <td>{{ account.currency }}</td>
          <td>{{ account.weight }}</td>
          <td>{{ account.dateAdded|date('F j, Y') }}</td>
          <td>
            <a href="" class="btn btn-default">Edit</a>
            <a href="" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
