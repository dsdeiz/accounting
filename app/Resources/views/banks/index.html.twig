{% extends 'base.html.twig' %}

{% set subheading   = "Bank" %}
{% set breadcrumbs  = "List" %}

{% block body %}
  <div class="table-responsive">
    <a href="/bank/add" class="btn btn-primary pull-right">Add bank</a>
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Bank name</th>
          <th>Date Added</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for bank in banks %}
        <tr>
          <td>{{ bank.id }}</td>
          <td>{{ bank.name }}</td>
          <td>{{ bank.dateAdded|date('F j, Y') }}</td>
          <td>
            <a href="" class="btn btn-default">Edit</a>
            <a href="" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
